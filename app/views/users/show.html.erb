<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', { user: @user, book: @book_new } %>
    </div>
    <div class="col-md-8 offset-md-1">
     <table>
       <thead>
         <tr>
           
           <th>Title</th>
           <th>Opinion</th>
         </tr>
       </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag 'no_image' %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
